<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:dialogTheme">@style/dialog</item>
    </style>
    <style name="title_style">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:paddingTop">@dimen/title_paddingTop</item>
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="menu_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/menu_checkbox</item>
    </style>

    <style name="add_city_title_style">
        <item name="android:layout_height">@dimen/add_city_title_height</item>
        <item name="android:textSize">@dimen/city_title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        //Dialog的windowFrame框为无
        <item name="android:windowFrame">@null</item>
        //是否浮现在activity之上
        <item name="android:windowIsFloating">false</item>
        //是否半透明
        <item name="android:windowIsTranslucent">true</item>
        //是否显示title
        <item name="android:windowNoTitle">true</item>
        //设置dialog的背景
        <item name="android:background">@drawable/main_menu_bg</item>
        //显示区域背景是否透明
        <item name="android:windowBackground">@android:color/transparent</item>
        //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5
        <item name="android:backgroundDimAmount">0.5</item>
        //显示区域以外是否使用黑色半透明背景
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="city_title_style">
        <item name="android:layout_height">@dimen/city_title_height</item>
        <item name="android:textSize">@dimen/city_title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
